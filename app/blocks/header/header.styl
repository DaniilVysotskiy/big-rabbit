.header
	display flex
	position: relative
	min-height: 150px
	&.hero
		position: absolute
		top: 0
		align-self: center
		z-index: 10
		& .header__bg
			background-image: none
			background-color: transparent
	&__bg
		position: absolute
		width: 100%
		height: 100%
		background-color: green_brand_light
		background-image url('/assets/images/header_bg.jpg')
		background-position: 50% 30%
		filter: brightness(.7) saturate(1.5)
		z-index: -1
	&--wrapper
		display flex
		flex-flow: row nowrap
		justify-content space-between
		align-items: center
		padding-top: 10px
	& .logo
		margin-right: 45px
	& .grey-link
		display: inline
		color: grey_brand_light
		padding-bottom: 5px
		border-bottom: 1px dashed grey_brand_light
		text-decoration: none
		font-weight: 500
		margin-right: 50px
		&:hover
			color: white
			border-color: white
	& .phone-link
		color: white
		text-decoration: none
		font-size: 18px
		letter-spacing: 1px
		&::before
			content '\f095'
			font-family: FontAwesome
			margin-right: 5px
		&:hover
			transform: scale(1.1)
		&:not(:first-child)
			margin-left: 1em
	& .icons_group
		margin-left: auto
		margin-right: -10px
		& .icon-feedback,
		& .icon-phone,
		& .icon-search
			display: inline-block
			color: white
			margin: 0 10px
			&:hover
				filter: brightness(1.5)
		& .icon-feedback
			sprite: $help_icon
		& .icon-phone
			sprite: $phone_icon
		& .icon-search
			sprite: $loupe_icon
	&__menu
		flex: 1 1 auto
		display: flex
		flex-flow: row wrap
		align-items: center
		height: 100%
		padding-top 18px
		.nav
			flex: 1 1 100%
			margin-top: 10px
			&__list
				display: flex
				flex-flow: row wrap
				align-items: flex-end
				margin: 0 -25px
			&__item
				position: relative
				margin: 10px 25px
				&.active .nav__link
					border-bottom: 1px solid white
				&:not(:first-child)
					position: relative
					margin-left: 33px
					&::before
						content: '/'
						position: absolute
						left: -33px
						color: white
			&__link
				color: white
				text-transform: uppercase
				text-decoration: none
				font-weight: 500
				padding: 5px 0
				border-bottom: 1px solid transparent
				&:hover
					border-bottom: 1px solid white
				&:hover
					& + .dropdown
						display: block
		.hasDropdown
			position: relative
			&::after
				content: 'â–¼'
				position: absolute
				top: 4px
				right: -12px
				font-size: 8px
				color: white
				&::after
					transform: rotate(180deg)
		.dropdown
			display: none
			position: absolute
			padding-y: 10px
			left: 0
			top: 12px
			z-index: 10
			&:hover
				display: block
			&--wrapper
				display: flex
				flex-direction: column
				background-color: rgba(0, 0, 0, .8)
				border-top: 3px solid green_brand_light
				padding-y: 10px
			&__item
				padding: 10px 30px
			&__link
				color: white
				text-decoration: none
				opacity: .9
				white-space: nowrap
				&:hover
				&.active
					opacity: 1

@media (max-width: 800px)
	.header.hero
		position relative
		align-self: initial
	.header.hero .header__bg
		background-image: url(/assets/images/header_bg.jpg)
	.header__bg
		background-position: 50% 40%
	.header--wrapper
		flex-direction: column
		width: 100%
		padding-y: 20px
	.header .logo
		margin-right: 0
	.header__menu,
	.header__menu .nav__list
		flex-flow: column
		align-items: center
	.header .grey-link,
	.header .phone-link,
	.header .icons_group
		margin-x: 0
		margin-bottom: 1em
	.header__menu .nav__item
		margin: 10px 0
	.header__menu .nav__item:not(:first-child)
		margin-left: initial
	.header__menu .nav__item:not(:first-child)::before
		content: none
	.header .phone-link:not(:first-child)
		margin-left: 0


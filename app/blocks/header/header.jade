					a.phone-link(href="tel: +7 (926) 539-37-69") +7 (926) 539-37-69
					.icons_group
						a.icon-feedback(href="#feedback" data-link="modal")
						a.icon-phone(href="/contacts.html")
						//- a.icon-search(href="/search.html")
					nav.nav
						ul.nav__list
							li.nav__item
								a.nav__link(href="/") Главная
							li.nav__item.hasDropdown

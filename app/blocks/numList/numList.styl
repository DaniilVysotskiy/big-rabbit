.numList
	display: flex
	flex-direction: column
	padding-left: 70px
	&__item
		position: relative
		padding-left: 30px
		border-left: 1px solid grey_brand
		&:not(:first-child)
			margin-top: 40px
		&::before
			counter-increment: bullet
			content: counter(bullet) '.'
			position: absolute
			left: -50px
			font-size: 35px
			font-weight: 900
			color: green_brand_light
	&__title
		display: inline-block
		font-size: 22px
		font-weight: bold
		margin-bottom: 10px
	&__text
		font-size: 18px

@media (max-width: 400px)
	.numList
		padding-left: 40px
	.numList__title
		font-size: 18px
	.numList__text
		font-size: 1em
	.numList__item
		padding-left: 20px
	.numList__item::before
		font-size: 25px
		left: -40px
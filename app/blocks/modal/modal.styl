.modal
	display block
	&--wrapper
		display: none
		justify-content: center
		align-items: center
		position: fixed
		top: 0
		left: 0
		right: 0
		bottom: 0
		background-color: rgba(0, 0, 0, .5)
		z-index: 999
		&.active
			display: flex
	&__dialog
		display: flex
		flex-direction: column
		position: relative
		background-color: white
		max-width: 770px
		height: auto
		max-height: 900px
		& .close
			position: absolute
			top: 20px
			right: 18px
			background-color: transparent
			border: none
			sprite: $close
	&--breed
		display: flex
		visibility: hidden
		&.active
			visibility: visible
		& .modal__dialog
			max-height: calc(100vh - 50px);
	&__header
		padding: 25px
	&__scroll
		margin: 0 20px 25px 25px
		overflow: auto
		&::-webkit-scrollbar-track
			border-radius: 10px
			background-color: grey_brand_light
		&::-webkit-scrollbar
			width: 12px
			background-color: #F5F5F5
		&::-webkit-scrollbar-thumb
			border-radius: 10px
			-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3)
			background-color: grey_brand
	&__content
		display: flex
		flex-direction: column
		align-items: center
		padding-right: 15px
.single-item
	margin-bottom: 1em
	width: calc(100% - 50px)
.slick-arrow
	display: block
	position: absolute
	border: none
	top: 50%
	transform: translateY(-50%)
	z-index: 1
	width: 50px
	height: 50px
	background-color: green_brand_light
.slick-prev
	left: -25px
	&::after
		content: ''
		display: block
		position: absolute
		sprite: $slider_arrow
		top: 50%
		left: 50%
		transform: translate(-50%, -50%) rotate(180deg)
.slick-next
	right: -25px
	&::after
		content: ''
		display: block
		position: absolute
		sprite: $slider_arrow
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
.slick-disabled
	background-color: grey_brand_light
	&::after
		filter: invert(.4)
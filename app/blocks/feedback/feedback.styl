.feedback
	display block
	background-color: #EFEFEF
	border: 1px solid #CFCFCF
	border-radius: 3px
	box-shadow: 0 0 5px rgba(0, 0, 0, .3)
	padding: 30px 50px
	max-width: 467px
	min-width: 300px
	.form
		display flex
		flex-direction: column
		font-size: 18px
		color: grey_brand
		&__text
			color: black_brand
			font-weight: 500
			margin-bottom: 1em
		&__small
			font-size: 14px
			font-style: italic
			margin-bottom: 1em
		&__input
			height: 40px
			padding: 10px
			font-size: 16px
			border-radius: 3px
			border: 1px solid #A7A7A7
			&:not(:first-child)
				margin-bottom: 1em
		&__textarea
			padding: 10px
			font-size: 16px
			border-radius: 3px
			border: 1px solid #A7A7A7
			margin-bottom: 1em
		&__agree
			&:checked
				& + .form__checkbox::after
					content: '\f00c'
					font-family: FontAwesome
					font-size: 18px
					color: grey_brand
					position: absolute
					top: 3px
					left: 4px
		&__checkbox
			display: flex
			align-items: center
			position: relative
			padding-left: 40px
			font-size: 14px
			line-height: 1.2
			cursor: pointer
			max-width: 420px
			user-select: none
			margin-bottom: 2em
			min-height: 26px
			vertical-align: middle
			&::before
				content: ''
				display: inline-block
				position: absolute
				top: 0
				left: 0
				width: 26px
				height: 26px
				border: 2px solid #A0A0A0
				border-radius: 3px
				background-color: transparent
				margin-right: 5px
				box-sizing: border-box

@media (max-width: 900px)
	.feedback
		padding: 20px

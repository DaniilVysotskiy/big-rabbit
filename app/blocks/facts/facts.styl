.facts
	display block
	&--wrapper
		display: flex
		flex-flow: row nowrap
		justify-content space-between
	&--left
		display: flex
		flex-flow: row wrap
		margin-bottom: 50px
	&--right
		flex: 1 0 auto
		margin-bottom: 50px
		& img
			width: 100%
	&__item
		flex: 1 1 50%
		display: flex
		flex-direction: column
		padding-right: 40px
		margin-y: 20px
	&__icon
		margin-bottom: 10px
		&.ham
			sprite: $ham
		&.rabbit
			sprite: $rabbit
		&.wheat
			sprite: $wheat
		&.fields
			sprite: $fields
	&__number
		font-size: 65px
		font-weight: 700
		color: grey_brand
		margin-bottom: 10px
	&__text
		font-size: 18px
		color: black

@media (max-width: 800px)
	.facts--wrapper
		flex-flow: column
	.facts--left
		justify-content space-around

@media (max-width: 400px)
	.facts--left
		flex-flow: column
		justify-content center
		align-items: center
	.facts__item
		text-align: center
		padding-right: 0
		align-items: center
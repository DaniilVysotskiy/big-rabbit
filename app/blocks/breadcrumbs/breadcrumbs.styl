.breadcrumbs
	display: block
	width: 100%
	margin-y: 40px
	&__list
		display: flex
		flex-flow: row wrap
	&__item
		position: relative
		&:not(:first-child)
			&::before
				content: '/'
				display: inline-block
				position: relative
				margin-left: 8px
				margin-right: 5px
		&:last-child
			& .breadcrumbs__link
				color: green_brand_light
	&__link
		color: black_brand
		text-decoration: none
		&:hover
			text-decoration: underline

